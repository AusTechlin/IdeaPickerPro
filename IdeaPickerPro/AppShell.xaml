<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IdeaPickerPro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IdeaPickerPro.Views"
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        <Tab Title="Add New Idea">
            <ShellContent
                Title="Add New Idea"
                ContentTemplate="{DataTemplate local:AddPage}"
                Route="AddPage" />
        </Tab>
        <Tab Title="Random Idea">
            <ShellContent
                Title="Get a Random Idea"
                ContentTemplate="{DataTemplate local:RandomPage}"
                Route="RandomPage" />
        </Tab>
    </TabBar>
    
</Shell>
